<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AprendamosOtomi.Views.Traductor">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Traductor!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Ingrese palabra" TextColor="#FF4081"></Entry>

            <BoxView WidthRequest="200" HeightRequest="200" VerticalOptions="Center"></BoxView>

            <Button x:Name="btnTraduce" Style="{StaticResource btnAceptar}"
                    Text="Traduce" TextColor="WhiteSmoke" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>